<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="font">
        <attr name="font" format="string"/>
    </declare-styleable>

    <declare-styleable name="lobato_checkbox">
        <attr name="accent_color" format="color"/>
        <attr name="stroke_color" format="color"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="lobato_button_flat">
        <attr name="background_color" format="color"/>
        <attr name="ripple_color" format="color"/>
        <attr name="ripple_speed" format="integer"/>
        <attr name="ripple_size" format="integer"/>
    </declare-styleable>

    <declare-styleable name="lobato_CustomAttributes">
        <!-- indicate if the slider must show number indicator -->
        <attr name="lobato_showNumberIndicator" format="boolean" />
        <!-- in progress view indicate max value of progress -->
        <attr name="lobato_max" format="integer" />
        <!-- in progress view indicate min value of progress -->
        <attr name="lobato_min" format="integer" />
        <!-- in progress view indicate value of progress -->
        <attr name="lobato_value" format="integer" />
        <!-- in progress view indicate value of progress -->
        <attr name="lobato_progress" format="integer" />
        <!-- in switche's view indicate state of view -->
        <attr name="lobato_check" format="boolean" />
        <!-- in float button indicate icon resource -->
        <attr name="lobato_iconFloat" format="integer" />
        <!-- in float button indicate if must start with animation -->
        <attr name="lobato_animate" format="boolean" />
        <!-- Speed of ripple animation -->
        <attr name="lobato_rippleSpeed" format="float" />
        <!-- in float button indicate if must start with animation -->
        <attr name="lobato_rippleColor" format="color|reference" />
    </declare-styleable>

</resources>